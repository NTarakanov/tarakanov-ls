include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        //- +image('content/user.jpg', 'user-pic')
        //- +icon('link', 'link-class')
        //- .icon-bg
        .welcome-section
          section.hero
            .container.hero__container
              header.header
                .header__logo
                  .logo BA
                .header__menu
                  nav.menu
                    - var items = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                    ul.menu__list
                      each item in items
                        li.menu__item
                          a.menu__link #{item}
                .header__social
                  -var icons = ["insta", "vk", "github"]
                  ul.socials
                    each item in icons
                      li.socials__item
                        a(href="").socials__link
                          +icon(item, 'socials__icon')
              .hero__content
                .user-data
                  .user-data__desc Личный сайт веб разработчика
                  h1.user-data__name Владимир Астаханов
              .hero__bottom-btn.scroll-down-btn
                a(href="#") Скролл