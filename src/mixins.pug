mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin skills(title, param)
  .skill
    svg(viewBox="0 0 200 200")
      circle(cx="100" cy="100" r="80" fill="transparent" stroke="#e9e9e9" stroke-width="10px")
      circle(cx="100" cy="100" r="80" fill="transparent" stroke="url(#gradient)" stroke-width="20px" stroke-dasharray="502.4" stroke-dashoffset=param)
    .skill__title= title
    svg(style="width:0; height:0; position: absolute;" aria-hidden="true")
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color='#4a00ed')
        stop(offset="100%" stop-color='#9300e8')