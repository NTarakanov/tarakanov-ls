mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin skills(title)
  .skill
    svg(viewBox="0 0 200 200")
      circle(cx="100" cy="100" r="80" fill="transparent" stroke="#e9e9e9" stroke-width="10px")
      circle(cx="100" cy="100" r="80" fill="transparent" stroke="url(#gradient)" stroke-width="20px" stroke-dasharray="502.4" stroke-dashoffset="376.8")
    .skill__title= title