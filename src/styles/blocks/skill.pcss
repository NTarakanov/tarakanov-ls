.skill {
  position: relative;
  padding: 0 2.5%;
  text-align: center;

  circle:last-child {
    transform: rotate(180deg);
    transform-origin: 50% 50%;
  }

  &__title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 18px;
    font-weight: 700;
  }
}
