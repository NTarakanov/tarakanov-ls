.user-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;

  &__desc {
    max-width: 200px;
    font-size: 18px;
    color: rgba(#464d62, 0.4);
    font-weight: 600;
    line-height: 1.666;
    margin-bottom: 20px;
  }

  &__name {
    max-width: 450px;
    font-size: 72px;
    font-weight: 800;
    line-height: 0.833;
  }
}
